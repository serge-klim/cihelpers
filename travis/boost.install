#!/usr/bin/env bash

wget --tries=15 --no-check-certificate --quiet -O - https://dl.bintray.com/boostorg/release/${BOOST_VER}/source/boost_${BOOST_VER//./_}.tar.gz | tar -xz
cd boost_${BOOST_VER//./_}
if [[ "${CXX%%+*}" == "clang" ]]; then
     ./bootstrap.sh toolset=clang
else
    ./bootstrap.sh
fi
./b2 $@
